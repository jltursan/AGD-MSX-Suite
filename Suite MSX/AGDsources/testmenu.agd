EVENT INITSPRITE

EVENT MAINLOOP1

 COLOUR $1E
 PRINTMODE 1
 AT 0 6
 PRINT "MENU/INVENTORY TEST:"
 PRINTMODE 0

 AT 4 6
 PRINT "MENU      = PRESS 1"
 AT 5 6
 PRINT "EMPTY INV = PRESS 2"
 AT 6 6
 PRINT "INVENTORY = PRESS 3"

 IF KEY OPTION1
  AT 23,1
  PRINT "1."
  COLOUR $F6
  MENU "ONE,TWO,THREE,FOUR,FIVE,SIX,SEVEN"
  COLOUR $4E
  AT 23,5
  PRINT "SELECTION WAS: "
  DISPLAY OPT
  PRINT "  "
 ENDIF

 IF KEY OPTION2
  AT 23,1
  PRINT "2."
  IF GOT 0
    PUT 32,64,0
  ENDIF
  IF GOT 3
    PUT 32,112,3
  ENDIF
  IF GOT 5
    PUT 32,144,5
  ENDIF
  COLOUR $F4
  INV " OBJ0 , OBJ1 , OBJ2 , OBJ3 , OBJ4 , OBJ5"
  COLOUR $4E
  AT 23,5
  PRINT "SELECTION WAS: "
  DISPLAY OPT
  PRINT "  "
 ENDIF

 IF KEY OPTION3
  AT 23,1
  PRINT "3."
  GET 0
  GET 3
  GET 5
  COLOUR $FD 
  INV " OBJ0 , OBJ1 , OBJ2 , OBJ3 , OBJ4 , OBJ5"
  COLOUR $4E
  AT 23,5
  PRINT "SELECTION WAS: "
  DISPLAY OPT
  PRINT "  "
 ENDIF

